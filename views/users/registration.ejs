<%- include('../layouts/header.ejs') -%>



<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">User Registration Form</h2>
            <span>User Registration</span>
        </div>
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Enter name" required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="phone" placeholder="Enter mobile" required>
            </div>
            <div class="form-group">
                <input type="file" class="form-control" name="image" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Enter password" required>
            </div>
            <div class="form-group">
                <button type="submit" value = "Register" class="btn btn-success">Submit</button>
            </div>
        </form>
        <% if (message) { %>
            <div class="alert alert-<%= message.startsWith('Registration successful') ? 'success' : 'danger' %>">
                <%= message %>
            </div>
        <% } %>
    </div>
</div>

<%- include('../layouts/footer.ejs') -%>